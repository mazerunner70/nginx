{
  "name": "provisioner",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "jest --runInBand --coverage --verbose",
    "start": "nodejs -r dotenv/config --experimental-modules index.mjs dotenv_config_path=./config/production.env",
    "test-db": "nodejs --experimental-modules database/db-test.js",
    "init-db": "nodejs --experimental-modules database/init-db.js",
    "build": "flow-remove-types src/ -x '.mjs' -d compiled/",
    "flow": "flow"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "babel-jest": "^23.2.0",
    "chalk": "^2.4.1",
    "debug": "^3.1.0",
    "dotenv": "^6.0.0",
    "eslint": "^4.19.1",
    "mocha": "^4.1.0",
    "restify": "^7.2.0",
    "sinon": "^4.1.3",
    "sqlite3": "^4.0.1"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-preset-env": "^1.7.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-flow": "^6.23.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.12.0",
    "flow-bin": "^0.75.0",
    "flow-remove-types": "^1.2.3",
    "jest": "^23.1.0",
    "nyc": "^12.0.1"
  },
  "jest": {
    "verbose": true,
    "testMatch": [
      "**/__tests__/**/*.?(m)js?(x)"
    ],
    "roots": [
      "<rootDir>/src"
    ],
    "moduleFileExtensions": [
      "js",
      "json",
      "jsx",
      "node",
      "mjs"
    ],
    "transform": {
      "^.+.m?js$": "babel-jest"
    }
  },
  "babel": {
    "env": {
      "test": {
        "presets": [
          [
            "es2015"
          ]
        ],
        "plugins": [
          [
            "transform-es2015-modules-commonjs",
            {
              "spec": true
            }
          ]
        ]
      }
    }
  }
}
